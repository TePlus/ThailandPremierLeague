<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teplus.thaipremierleague.TableActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Team" />

        <TextView
            android:id="@+id/txtGP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_app"
            android:layout_toLeftOf="@+id/txtW"
            android:layout_toStartOf="@+id/txtW"
            android:fontFamily="sans-serif-medium"
            android:text="GP" />

        <TextView
            android:id="@+id/txtW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_app"
            android:layout_toLeftOf="@+id/txtD"
            android:layout_toStartOf="@+id/txtD"
            android:fontFamily="sans-serif-medium"
            android:text="W" />

        <TextView
            android:id="@+id/txtD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_app"
            android:layout_toLeftOf="@+id/txtL"
            android:layout_toStartOf="@+id/txtL"
            android:fontFamily="sans-serif-medium"
            android:text="D" />

        <TextView
            android:id="@+id/txtL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_app"
            android:layout_toLeftOf="@+id/txtGD"
            android:layout_toStartOf="@+id/txtGD"
            android:fontFamily="sans-serif-medium"
            android:text="L" />

        <TextView
            android:id="@+id/txtGD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_app"
            android:layout_toLeftOf="@+id/txtPTS"
            android:layout_toStartOf="@+id/txtPTS"
            android:fontFamily="sans-serif-medium"
            android:text="GD" />

        <TextView
            android:id="@+id/txtPTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:text="PTS" />
    </RelativeLayout>
</RelativeLayout>
